<% orderables.each do |orderable| %>
  <% product = orderable.product %>
  <div id="<%= "cart-#{product.id}" %>">
    <div style="display:flex;justify-content:space-between;margin: 0em 5em;">
      <strong>Name:</strong>
      <%= product.name %>
      <strong>Price:</strong>
      <%= "$ #{product.price}" %>
      <%= form_with(url: cart_remove_path, method: :delete) do |f| %>
        <%= f.hidden_field :id, value: orderable.id.to_s %>
        <%= f.submit "X" %>
      <% end %>
      <strong>Total:</strong>
      <%= orderable.total %>
    </div>
  </div>
<% end %>
